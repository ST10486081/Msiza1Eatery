<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreakfastMenu">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="BREAKFAST MENU"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="51dp" />

    <ImageView
        android:id="@+id/imageBreakfast1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/Smoothie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/imageBreakfast2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/Muesli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/imageBreakfast3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/Sandwich"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBreakfast1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/imageBreakfast4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBreakfast2"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>